@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="pagetitle">
    <h1>Home</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home/Dashboard</li>

        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">

                <!-- Totalusers -->
                @if (Model.IsSuperAdmin)
                {
                    <div class="col-xxl-4 col-md-6">
                        <div class="card info-card sales-card">
                            <a asp-area="Account" asp-controller="User" asp-action="Index">
                                <div class="card-body">
                                    <h5 class="card-title">Total <span>| Users</span></h5>

                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-people"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6 id="total-users">0</h6>

                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- End Sales Card -->
                }
                <!-- Total Todos -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">
                        <a asp-area="Todo" asp-controller="Todo" asp-action="Index">
                            <div class="card-body">
                                <h5 class="card-title">Total <span>| Todos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-file"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="total-todos">0</h6>

                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Active Todos -->
                <div class="col-xxl-4 col-xl-6">
                    <div class="card info-card customers-card">
                        <a asp-area="Todo" asp-controller="Todo" asp-action="ActiveTodo">
                            <div class="card-body">
                                <h5 class="card-title">Active <span>| Todos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-chat"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="active-todos">0</h6>

                                    </div>
                                </div>

                            </div>
                        </a>
                    </div>


                </div>

                <!-- Completed Todos -->

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <a asp-area="Todo" asp-controller="Todo" asp-action="CompletedTodo">
                            <div class="card-body">
                                <h5 class="card-title">Completed <span>| Todos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-check"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="completed-todos">0</h6>

                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Shared Todos -->

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">
                        <a asp-area="Todo" asp-controller="SharedTodo" asp-action="Index">
                            <div class="card-body">
                                <h5 class="card-title">Shared <span>| Todos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-reply-all-fill"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="shared-todos">0</h6>

                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>


                <!-- High Priority Todos -->

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card customer-card">
                        <a asp-area="Todo" asp-controller="Todo" asp-action="ActiveTodo" asp-route-PriorityLevel="3">
                            <div class="card-body">
                                <h5 class="card-title">High Priority <span>| Todos</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-box-arrow-in-up"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 id="high-priority-todos">0</h6>

                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>


                <!-- Medium Priority Todos -->

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                          <a asp-area="Todo" asp-controller="Todo" asp-action="ActiveTodo" asp-route-PriorityLevel="2">
                        <div class="card-body">
                            <h5 class="card-title">Medium Priority <span>| Todos</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="medium-priority-todos">0</h6>

                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>


                <!-- Low Priority Todos -->

                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">
                          <a asp-area="Todo" asp-controller="Todo" asp-action="ActiveTodo" asp-route-PriorityLevel="1">
                        <div class="card-body">
                            <h5 class="card-title">Low Priority <span>| Todos</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box-arrow-in-down"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="low-priority-todos">0</h6>

                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>


<div class="container-fluid">
 <!-- Content Row -->

    <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Monthly Overview</h6>

                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Todo Chart</h6>

                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>

                </div>
            </div>
        </div>
    </div>



</div>

@section Scripts
    {
    <script src="~/js/Dashboard.js" asp-append-version="true"></script>
}