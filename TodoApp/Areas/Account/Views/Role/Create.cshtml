@model RoleViewModel
@{
    ViewData["Title"] = "Create Role";
}
<div class="pagetitle">
    <h1>Role</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Role/Create  </li>

        </ol>
    </nav>
</div>
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="p-5">
                       
                        <form method="post" asp-action="Create">
                            <div class="form-group ">

                                @Html.TextBoxFor(a=>a.RoleName,new{@class="form-control form-control-user required",placeholder="Role Name"})
                                @Html.ValidationMessageFor(a=>a.RoleName,"",new{@class="text-danger"})
                            </div>

                            <button type="submit" class="btn btn-primary mt-2">
                                create
                            </button>

                        </form>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
