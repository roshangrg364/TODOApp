@model TodoCreateViewModel
@{
    ViewData["Title"] = "Add Todo";
}
<div class="pagetitle">
    <h1>Todo</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Todo/Create</li>

        </ol>
    </nav>
</div>

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              
                <div class="col-lg-12">
                    <div class="p-5">

                        <form method="post" asp-action="Create">
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Title * </label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(a=>a.Title,new{@class="form-control form-control-user required",placeholder="Title"})
                                    @Html.ValidationMessageFor(a=>a.Title,"",new{@class="text-danger"})

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Priority Level * </label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(a => a.PriorityLevel, (SelectList)ViewBag.TodoPriorityLevel,"--select--", new { @class = "form-control form-control-user required " })
                                    @Html.ValidationMessageFor(model => model.PriorityLevel, "", new { @class = "text-danger" })

                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Due Date * </label>
                                <div class="col-sm-10">
                                    <input asp-for="DueDate" type="date" class="form-control form-control-user" />
                                    <span asp-validation-for="DueDate" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Description </label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(a=>a.Description,new{@class="form-control form-control-user required",placeholder="Description"})
                                    @Html.ValidationMessageFor(a=>a.Description,"",new{@class="text-danger"})
                                </div>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary">
                                create
                            </button>

                        </form>
                       
                    </div>
                </div>
            </div>


        </div>
    </div>

</div>
