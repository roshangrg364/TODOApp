@model SharedTodoCreateViewModel
@{
    ViewData["Title"] = "Share Todo";
}
<div class="pagetitle">
    <h1>Todo</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Todo / Share Todo </li>

        </ol>
    </nav>
</div>

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-lg-8">
                    <div class="p-5">
                    
                       
                        <form method="post" asp-action="ShareTodo">
                            @Html.HiddenFor(a=>a.TodoId)
                          
                            <div class="form-group mt-2">
                                <label>Email Address *</label>
                                @Html.TextBoxFor(a=>a.Email,new{@class="form-control form-control-user required",placeholder="Email"})
                                @Html.ValidationMessageFor(a=>a.Email,"",new{@class="text-danger"})
                            </div>
                            <div class="form-group mt-2">
                                <label>Comment</label>
                                @Html.TextAreaFor(a=>a.Description,new{@class="form-control form-control-user required",placeholder="Description"})
                                @Html.ValidationMessageFor(a=>a.Description,"",new{@class="text-danger"})
                            </div>

                          
                            <button type="submit" class="btn btn-primary mt-2">
                                <i class="fas fa-share fa-lg "></i>  Share
                            </button>

                        </form>
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
